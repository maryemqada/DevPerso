<aura:component controller="BoatSearchResults" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:attribute name="boats" type="Boat__c[]"/> 
    <aura:attribute name="selectedBoatID" type="string"/> 
    <aura:attribute name="boatTypeId" type="string"/> 
    <!-- set up the aura:method for search -->
    <aura:method name="search" description="accepts boatTypeId
            and executes search that refreshes the boats attribute">
        <aura:attribute name="boatTypeId" type="Id"/>
    </aura:method>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <div>
    <lightning:layout multipleRows="true">

            <aura:if isTrue="{!v.boats.length > 0}">

            <aura:iteration items="{!v.boats}" var="bot">
                <lightning:layoutItem flexibility="auto" padding="around-small">
                	<c:BoatTile boat="{!bot}" />
                </lightning:layoutItem>
             </aura:iteration>

            <aura:set attribute="else">
                <div class="slds-align_absolute-center">
                    No boats found
                </div>
            </aura:set>
        </aura:if> 
    </lightning:layout>
    </div>
</aura:component>